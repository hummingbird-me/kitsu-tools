<li class='dropdown header-item notifications'>
  <a {{bind-attr class="dropdown-toggle :notification-link hasUnreadNotifications:hasNew:hasNoNew"}} data-toggle='dropdown' href='#'>
    <i {{bind-attr class=':fa :fa-bell :active'}}>
      {{#if hasUnreadNotifications}}
        {{strpad unreadNotifications}}
      {{/if}}
    </i>
  </a>
  <ul class='dropdown-menu notification-dropdown right-nav-section'>
    {{#each limitedNotifications}}
      <li {{bind-attr class=":notification-element seen:nonew:new"}}>
        {{#link-to 'user.index' controller.currentUser classNames="clearfix"}}
          <div class='col-xs-1 col-sm-1 col-md-1 user-avatar'>
            <img {{bind-attr src="source_avatar"}}>
          </div>
          <div class='col-xs-11 col-sm-11 col-md-11 user-info'>
            <h5 class='username'>
              {{source_user}}
              <small class='user-action'>
                wrote a comment on your profile.
              </small>
            </h5>
            <small>{{time-ago time=created_at}}</small>
          </div>
        {{/link-to}}
      </li>
    {{else}}
      <li>
        <span>You don't have any notifications yet.</span>
      </li>
    {{/each}}
    <li class="view-all">
      {{#link-to 'notifications'}}View All Notifications{{/link-to}}
    </li>
  </ul>
</li>
