<div class="story">
  <div class="update-panel">
    <div class="series-thumb">
      <img class="responsive-image" {{bind-attr src="media.posterImage"}}>
    </div>
    <div class="media-content">
      <h4 class="story-title">
        {{#link-to mediaRoute media.id}}{{media.displayTitle}}{{/link-to}}
      </h4>
      <ul class="genre-list">
        {{#each genre in media.genres}}
          <li>{{genre}}</li>
        {{/each}}
      </ul>
      <ul class="feed-events">
        {{#each substory in displaySubstories}}
          <li class="single-event">
            <div class="row">
              <div class="col-md-11">
                <div class="user-image hidden-sm hidden-xs">
                  {{#link-to 'user' user}}
                    {{avatar user "thumb_small"}}
                  {{/link-to}}
                </div>
                <div class="event-info col-sm-12 col-md-11">
                  <p>
                    {{#link-to 'user' user}}{{user.username}}{{/link-to}}
                    {{{substory.html}}}
                  </p>
                  <ul class="inline-list secondary">
                    {{#if belongsToUser}}
                      <li>
                        <a class="remove-post" {{action removeComment}}>remove</a>
                      </li>
                    {{/if}}
                    <li>{{time-ago time=substory.createdAt}}</li>
                  </ul>
                </div>
              </div>
            </div>
          </li>
        {{/each}}
        {{#if moreThanTwoStories}}
          <a {{action "toggleShowAll"}}>
            {{#if showAll}}
              Show Less
            {{else}}
              Show More
            {{/if}}
          </a>
        {{/if}}
      </ul>
    </div>
  </div>
</div>
