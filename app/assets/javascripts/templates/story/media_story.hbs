<div class="update-panel">
  <div class="series-thumb">
    <img class="responsive-image" src="{{unbound media.posterImage}}">
  </div>
  <div class="media-content">
    <h4 class="story-title">
      {{#link-to mediaRoute media.id}}{{unbound media.displayTitle}}{{/link-to}}
    </h4>
    <ul class="genre-list">
      {{#each genre in media.genres}}
        <li>{{unbound genre}}</li>
      {{/each}}
    </ul>
    <ul class="feed-events">
      {{#each substory in displaySubstories}}
        <li {{bind-attr class=":single-event substory.isDeleted:deleted-event"}}>
          <div class="row">
            <div class="col-md-11">
              <div class="user-image hidden-sm hidden-xs">
                {{#link-to 'user' user}}
                  {{avatar user "thumb_small"}}
                {{/link-to}}
              </div>
              <div class="event-info col-sm-12 col-md-11">
                <p>
                  {{#link-to 'user' user}}{{unbound user.username}}{{/link-to}}
                  {{{unbound substory.html}}}
                </p>
                <ul class="inline-list secondary">
                  {{#if canDeleteStory}}
                    <li>
                      <a class="remove-post" {{action deleteSubstory substory}}>remove</a>
                    </li>
                  {{/if}}
                  <li>{{time-ago time=substory.createdAt}}</li>
                </ul>
              </div>
            </div>
          </div>
        </li>
      {{/each}}
      {{#if moreThanTwoSubstories}}
        <li class="view-more">
          {{#if loadingAll}}
            <i class="fa fa-spin fa-spinner"></i>
          {{else}}
            <a {{action "toggleShowAll"}}>
              {{#if showAll}}
                Show Less
              {{else}}
                Show More
              {{/if}}
            </a>
          {{/if}}
        </li>
      {{/if}}
    </ul>
  </div>
</div>
