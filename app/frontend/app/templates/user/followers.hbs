<div class="container">
  {{#each}}
    <div class="follow-panel-wrapper">
      <div class="follow-panel">
        {{#link-to 'user' username}}
          <div class="follow-cover" {{bind-attr style=coverImageStyle}}></div>
        {{/link-to}}
        <div class="user-avatar">
          <a {{bind-attr href=userLink}}>
            {{avatar this 'thumb'}}
          </a>
          {{#if isFollowed}}
            <a class="btn follow-button unfollow" {{action "toggleFollow" this}}> Unfollow</a>
          {{else}}
            <a class="btn follow-button" {{action "toggleFollow" this}}> Follow</a>
          {{/if}}
        </div>
        <div class="user-info">
          <h4>{{#link-to 'user' username}}{{username}}{{/link-to}}</h4>
          <p class="mini-bio">
            {{truncatedBio}}
            {{controller.followerCoverUrl}}
          </p>
        </div>
      </div>
    </div>
  {{/each}}
</div>

{{#if canLoadMore}}
  {{load-more action="loadNextPage"}}
{{/if}}
