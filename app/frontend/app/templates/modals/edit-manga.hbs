<div class="edit-series-modal">
  {{#bootstrap-modal action="close"}}
    <div class="modal-header">
      <h4 class="modal-title">Edit Manga</h4>
      <button class="btn btn-primary" {{action "save"}} {{bind-attr disabled=canSave}}>
        {{#if isSaving}}<i class="fa fa-spin fa-spinner"></i>{{/if}}
        Request Edits
      </button>
    </div>
    <div class="modal-body">
      <div class="row">
        {{#if pendingEdits}}
          <div class="col-sm-12">
            <div class="alert alert-info">
              You have
              {{pluralize pendingEdits "pending edit" "pending edits"}}
              for this manga.
            </div>
          </div>
        {{/if}}

        <div class="col-sm-12">
          <div class="form-group">
            <label>Synopsis</label>
            {{textarea value=synopsis rows=3 class="form-control"}}
          </div>
        </div>
        <div class="form-row">
          <div class="col-sm-6">
            <label data-tooltip="Direct link to your replacement image.">
              Poster Image URL
              <i class="fa fa-question-circle"></i>
            </label>
            {{input value=posterImage class="form-control"}}
          </div>
          <div class="col-sm-6">
            <label data-tooltip="Direct link to your replacement image. Preferable images are desktop wallpapers at least 1500px wide.">Cover Image URL</label>
            <i class="fa fa-question-circle"></i>
            {{input value=coverImage class="form-control"}}
          </div>
        </div>
        <div class="form-row">
          <div class="col-sm-3">
            <label>Chapter Count</label>
            {{input type="number" value=chapterCount class="form-control"}}
          </div>
          <div class="col-sm-3">
            <label>Volume Count</label>
            {{input type="number" value=volumeCount class="form-control"}}
          </div>
          <div class="col-sm-3">
            <label data-tooltip="Distance in pixels that you want to move the visible part of the cover photo up.">Cover Image Top Offset</label>
            <i class="fa fa-question-circle"></i>
            {{input type="number" value=coverImageTopOffset class="form-control"}}
          </div>
        </div>

        {{! Comment area }}
        <div class="col-sm-12">
          <div class="form-group">
            <label data-tooltip="Let the reviewer know why this edit is awesome">Leave a comment</label>
            <i class="fa fa-question-circle"></i>
            {{textarea value=comment rows=3 maxlength="255" class="form-control"}}
          </div>
        </div>
      </div>
    </div>
  {{/bootstrap-modal}}
</div>
