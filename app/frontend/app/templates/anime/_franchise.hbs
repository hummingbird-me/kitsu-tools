{{#if franchises.isFulfilled}}
  {{#with franchises controller='franchises'}}
    {{#each franchiseAnime}}
      <div class="franchise-show">
        <div class="franchise-poster">
          <img class="series-poster" {{bind-attr src=posterImage}} />
        </div>
        <div class="franchise-info">
          <h4 class="series-title">
            {{#link-to 'anime' id}}{{displayTitle}}{{/link-to}}
          </h4>
          {{partial "anime/infobar"}}
          <div>{{truncate-text text=synopsis length=200}}</div>
        </div>
      </div>
    {{/each}}

    {{#unless showAll}}
      <div class="view-more">
        <a {{action "toggleShowAll"}}>View More in Franchise</a>
      </div>
    {{/unless}}
  {{/with}}
{{else}}
  {{loading-indicator}}
{{/if}}
